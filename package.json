{
  "name": "ncm-desktop-for-linux",
  "version": "1.0.0",
  "description": "A third-party NetEase Cloud Music client for the Linux desktop",
  "main": "./out/main/index.js",
  "author": "PaulPerkenstein",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev:native": "cd native && npx napi build --watch",
    "dev": "concurrently --kill-others \"npm run dev:native\" \"electron-vite dev\"",
    "build:native": "cd native && npx napi build --release",
    "build": "npm run typecheck && npm run build:native && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "axios": "^1.13.2",
    "colord": "^2.9.3",
    "electron-updater": "^6.3.9",
    "extract-colors": "^4.2.1",
    "NeteaseCloudMusicApi": "^4.28.0",
    "pinia": "^3.0.4",
    "tough-cookie": "^6.0.0",
    "vue-draggable-plus": "^0.6.1",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@napi-rs/cli": "^3.5.1",
    "@types/node": "^22.19.2",
    "@types/tough-cookie": "^4.0.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/devtools": "^8.0.5",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^10.0.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.6",
    "vue": "^3.5.21",
    "vue-tsc": "^3.0.7"
  },
  "build": {
    "asar": true,
    "files": [
      "out/**",
      "package.json"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "extraResources": [
      {
        "from": "native/index.node",
        "to": "native/index.node"
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
